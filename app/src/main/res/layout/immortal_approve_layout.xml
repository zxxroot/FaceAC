<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_top_layout" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/public_height"
        android:background="@drawable/authentication" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/public_title_height"
        android:lineSpacingExtra="@dimen/dimen_03"
        android:lineSpacingMultiplier="1.2"
        android:padding="@dimen/dimen_10"
        android:text="@string/immortal_approve_tips"
        android:textColor="@color/bg_color"
        android:textSize="@dimen/size_14" />
    <Button
        android:id="@+id/btnGoScanCamera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_title_height"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/complete_btn_selector"
        android:padding="@dimen/dimen_05"
        android:text="@string/go_scan_camera_txt"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16" />

    <Button
        android:id="@+id/btnGoIdentify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_title_height"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/complete_btn_selector"
        android:padding="@dimen/dimen_05"
        android:text="@string/go_identify_txt"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16" />

    <Button
        android:id="@+id/btnGoImmortal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_title_height"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/complete_btn_selector"
        android:padding="@dimen/dimen_05"
        android:text="@string/go_immortal_txt"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16" />
</LinearLayout>